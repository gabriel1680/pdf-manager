#!/usr/bin/env php
<?php

require __DIR__ . '/../vendor/autoload.php';

use Gabriellopes\Pdfmanager\MergePDFRequest;
use Gabriellopes\Pdfmanager\FileSystemFileProvider;
use Gabriellopes\Pdfmanager\MergePDFFile;
use Gabriellopes\Pdfmanager\PDFManager;

$resourcesDir = __DIR__ . "/../resources/";
$fileProvider = new FileSystemFileProvider($resourcesDir);
$manager = new PDFManager($fileProvider);
$mergeRequest = new MergePDFRequest("new_file", new MergePDFFile("test1.pdf", [1, 2, 3]), new MergePDFFile("test2.pdf", [1]));
$manager->merge($mergeRequest);
