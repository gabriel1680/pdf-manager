#!/usr/bin/env php
<?php

require __DIR__ . '/../vendor/autoload.php';

use Gabriellopes\Pdfmanager\Application\PDFManagerService;
use Gabriellopes\Pdfmanager\Application\UseCase\MergePDF;
use Gabriellopes\Pdfmanager\Out\FileSystemFileProvider;
use Gabriellopes\Pdfmanager\In\PDFManagerCli;

$resources = __DIR__ . "/../resources";
$fileProvider = new FileSystemFileProvider($resources);
$mergePDF = new MergePDF($fileProvider);
$service = new PDFManagerService($mergePDF);
$app = new PDFManagerCli($service);
$app->run($argv);
