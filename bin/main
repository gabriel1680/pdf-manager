#!/usr/bin/env php
<?php

use Gabriellopes\Pdfmanager\MergePDF;
use Gabriellopes\Pdfmanager\MergePDFRequest;

require __DIR__ . '/../vendor/autoload.php';

$resourcesDir = __DIR__ . "/../resources/";
$fileProvider = new \Gabriellopes\Pdfmanager\FileSystemFileProvider($resourcesDir);
$manager = new \Gabriellopes\Pdfmanager\PDFManager($fileProvider);
$mergeRequest = new MergePDFRequest("new_file", new MergePDF("test1.pdf", [4]), new MergePDF("test2.pdf", []));
$manager->merge($mergeRequest);
